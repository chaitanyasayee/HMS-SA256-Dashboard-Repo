<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UpdateLabInfo</servlet-name>
        <servlet-class>com.appointment.UpdateLabInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdatePatientRecordtInfo</servlet-name>
        <servlet-class>com.nurse.UpdatePatientRecordtInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RequestFileAccess</servlet-name>
        <servlet-class>com.doctor.RequestFileAccess</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewPatientFiles</servlet-name>
        <servlet-class>com.doctor.ViewPatientFiles</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewPatientHashFiles</servlet-name>
        <servlet-class>com.doctor.ViewPatientHashFiles</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateLabInfo</servlet-name>
        <url-pattern>/UpdateLabInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdatePatientRecordtInfo</servlet-name>
        <url-pattern>/UpdatePatientRecordtInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RequestFileAccess</servlet-name>
        <url-pattern>/RequestFileAccess</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewPatientFiles</servlet-name>
        <url-pattern>/ViewPatientFiles</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewPatientHashFiles</servlet-name>
        <url-pattern>/ViewPatientHashFiles</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
